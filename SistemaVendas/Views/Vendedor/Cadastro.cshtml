@*Importando o modelo que será usado nesta View.*@
@model VendedorModel

<h3>Cadastro de Vendedores</h3>

@*formulário asp.net apontando para o controlador "Vendedor" usando a ação "Cadastro."*@
<form asp-controller="Vendedor" asp-action="Cadastro">
    @*Criando input invisível para testar se no caso de edição irá entrar o ID*@
    <input type="hidden" asp-for="ID" value="@try {@ViewBag.Vendedor.ID} catch { } ">

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="nome" type="text" class="form-control" value="@try {@ViewBag.Vendedor.nome} catch { } ">
        <span asp-validation-for="nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="email" type="email" class="form-control" value="@try {@ViewBag.Vendedor.email} catch{} ">
        <span asp-validation-for="email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Senha</label>
        <input asp-for="senha" id="senhaID" type="password" class="form-control">
        <span asp-validation-for="senha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Confirme a senha</label>
        <input type="password" id="senhaConfirmacaoID" class="form-control" onfocusout="validarConfirmacaoDeSenha()">        
    </div>

    @*button de tipo "submit" para enviar a requisição POST*@
    <button type="submit" class="btn btn-block btn-success">Cadastrar</button>

</form>

<script>

    function validarConfirmacaoDeSenha() {
        var primeiraSenha = $('#senhaID').val();
        console.log(primeiraSenha);
        var confirmacaoDeSenha = $('#senhaConfirmacaoID').val();
        console.log(confirmacaoDeSenha);

        if (confirmacaoDeSenha !== primeiraSenha) {
            window.alert('A confirmação de senha não condiz com a senha informada!');
            confirmacaoDeSenha = '';
            $('#senhaConfirmacaoID').val(confirmacaoDeSenha);
        }
    }

</script>

