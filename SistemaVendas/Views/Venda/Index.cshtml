@model VendaModel

<h2>Listagem de vendas</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Total</th>
            <th>Vendedor</th>
            <th>Cliente</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in (List<VendaModel>)ViewBag.listaVendas)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.data</td>
                    <td>@item.total</td>
                    <td>@item.vendedor</td>
                    <td>@item.cliente</td>
                </tr>
            }
        }
    </tbody>

</table>
<br />

<button class="btn btn-block btn-primary" type="button" onclick="Registrar()">Registrar</button>

<script>
    function Registrar() {
        window.location.href = '../Venda/Registrar';
    }
</script>