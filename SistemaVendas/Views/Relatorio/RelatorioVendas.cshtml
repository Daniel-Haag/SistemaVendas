@model RelatorioModel

<h2>Vendas por período</h2>

<form asp-controller="Relatorio" asp-action="RelatorioVendas">

    <div class="form-group">
        <label>Informe o período:</label>
        <br />
        <input asp-for="DataInicio" type="date" class="form-control" id="dataInicio">
        <input asp-for="DataFim" type="date" class="form-control" value="Data final" id="dataFim">
    </div>

    <button type="submit" class="btn btn-success" onclick="mostrarTabela()">Pesquisar</button>

    <table class="table table-bordered" id="tabelaVendas">
        <thead>
            <tr>
                <th>ID</th>
                <th>Data</th>
                <th>Total</th>
                <th>Vendedor</th>
                <th>Cliente</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in (List<VendaModel>)ViewBag.listaVendas)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.data</td>
                        <td>@item.total</td>
                        <td>@item.vendedor</td>
                        <td>@item.cliente</td>
                    </tr>
                }
            }
        </tbody>
    </table>

</form>

<script>

    $('#dataInicio').val('');
    $('#dataFim').val('');

</script>

